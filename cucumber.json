{

    "default": {

        "paths": [

            "tests/features/"

        ],

        "require": [

            "tests/steps/*.js",
            "tests/steps/support/**/*.js",
            "tests/utils/**/*.js"
            

        ],

        "formatOptions": {

            "snippetInterface": "async-await"

        },

        "format": [

            [

                "html",

                "cucumber-report.html"

            ],

            "summary",

            "progress-bar",

            "json:./cucumber-report.json",

            "rerun:@rerun.txt"

        ]

    }

}
